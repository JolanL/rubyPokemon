<%= simple_form_for(@move) do |f| %>
  <%= f.error_notification %>
  <div class="row">
	  <div class="form-inputs form-group col-lg-5">
	    <%= f.input :name, class: 'form-control' %>
	    <%= f.input :description, class: 'form-control' %>
	    <%= f.association :type, class: 'form-control' %>
	  </div>
  </div>
	  <div class="form-actions">
	    <%= f.button :submit, 'Enregistrer', class: 'btn btn-success' %>
	  </div>

<% end %>
