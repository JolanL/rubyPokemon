
<h2>Liste des attaques</h2>
<%= link_to 'Ajouter attaque', new_move_path, class: 'btn btn-success' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.name %></td>
        <td><%= move.description %></td>
        <td><%= render partial: 'types/type', locals: { type: move.type } %></td>
        <td><%= link_to 'Afficher', move, class: 'btn btn-info' %></td>
        <td><%= link_to 'Modifier', edit_move_path(move), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', move, method: :delete, data: { confirm: 'Etes vous sÃ»r ?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

