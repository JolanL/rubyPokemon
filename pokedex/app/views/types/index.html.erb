<h2>Liste des types</h2>
<%= link_to 'Nouveau Type', new_type_path, class: 'btn btn-success' %>
<table class="table" style="width: 650px;">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Couleur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type_badge(type.color, type.color) %></td>
        <td><%= link_to 'Afficher', type, class: 'btn btn-info' %></td>
        <td><%= link_to 'Éditer', edit_type_path(type), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', type, method: :delete, data: { confirm: 'Etes-vous sûr?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


